<% if @gossip.errors.any? %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
	<p>Nous n'avons pas réussi à enregistrer le potin pour la (ou les) raison(s) suivante(s) :</p>
	<ul>
		<% @gossip.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<% end %>

<%= form_with model: @gossip, local: true do |form| %>

<div class="container col-lg-6 col-md-3 col-sm-12">
	<div class="form-group text-center ">

		<div class="form-group">
			<%= form.label :title, 'Titre' %><br>
			<%= form.text_field :title, class: 'form-control' , required: true %>
		</div>

		<div class="form-group">
			<%= form.label :content, 'Contenu' %><br>
			<%= form.text_area :content, class: 'form-control' , required: true %>
		</div>

		<div class="form-group">
			<label for="tags">Choisis un tag:</label>
			<%= form.select(:tag_id) do %>
			<% @all_tags.each do |tag| -%>
			<%= content_tag(:option, tag.title, value: tag.id) %>
			<% end %>
			<% end %>
		</div>

		<div class="form-group">
			<%= form.submit 'Enregistrer', class: 'btn btn-success' %>
		</div>

		<% end %>

	</div>
</div>