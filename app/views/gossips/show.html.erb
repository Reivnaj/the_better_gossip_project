<div class="card mt-3">
  <div class="card-header">
  	<h3 class="card-title"><%= @gossip.title %> </h3>
  	<h5 class="card-subtitle mb-2 text-muted"><%= @gossip.user.first_name %>, <%= link_to @gossip.user.city.name, city_path(@gossip.user.city_id) %></h5>
  	<p class="card-text text-muted"><%= @gossip.created_at %></p>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @gossip.content %></p>
    <%= link_to "Profil de l'auteur", user_path(@gossip.user_id), {:class=>"card-link"} %>
  </div>
  <div class="card-footer">
  	<% @gossip.tags.each do |tag| %>
    <a class="card-link" href=#> <%= tag.title %> </a>
    <% end %>
  </div>
</div>


<h2>Commentaires</h2>
<% @gossip.comments.each do |comment| %>
  <p> <strong><%= comment.user.first_name %></strong>  </p>
  <p>
    <strong>Commentaire :</strong>
    <%= comment.content %>
  </p>
  <%= link_to 'Modifier',  edit_gossip_comment_path(@gossip)%>
<% end %>

<h2>Ajouter un commentaire :</h2>
<%= form_with(model: [ @gossip, @gossip.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :content, 'Commentaire :' %><br>
    <%= form.text_area :content %>
  </p>
  <p>
    <%= form.submit 'Enregistrer', {:class=>"btn btn-success" } %>
  </p>
<% end %>